{% extends 'base.html.twig' %}

{% block title %}Seat index{% endblock %}

{% block body %}
    <h1>Seat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RowIndex</th>
                <th>ColIndex</th>
                <th>Label</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seat in seats %}
            <tr>
                <td>{{ seat.id }}</td>
                <td>{{ seat.rowIndex }}</td>
                <td>{{ seat.colIndex }}</td>
                <td>{{ seat.label }}</td>
                <td>{{ seat.status }}</td>
                <td>
                    <a href="{{ path('app_seat_show', {'id': seat.id}) }}">show</a>
                    <a href="{{ path('app_seat_edit', {'id': seat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_seat_new') }}">Create new</a>
{% endblock %}
