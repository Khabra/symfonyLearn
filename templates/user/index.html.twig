{% extends 'base.html.twig' %}
{% block title %}User index{% endblock %}

{% block body %}
    <div class=main>
        <h1>User index</h1>
            <div class="container-column">
                {% if users|length > 0%}
            {% for user in users %}
            <div class="box-r">
                <p>
                    Username: {{user.username}} </br>
                    Email: {{ user.email }} </br>
                    Rol: {{ user.roles ? user.roles[0] }}
                </p>
            </div>
            {% endfor %}
            {% else %}
            <div class="box-r">no records found</div>
            {% endif %}
        </div>
        <a href="{{ path('app_user_new_student') }}" class="btn">Create new student</a>
    </div>
{% endblock %}
        